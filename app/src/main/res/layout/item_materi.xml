<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/data3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <RelativeLayout
                    android:id="@+id/main_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/icon_image"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentStart="false"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:padding="8dp"
                        app:srcCompat="@drawable/ic_book" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:layout_toRightOf="@id/icon_image"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:padding="3dp">

                        <TextView
                            android:id="@+id/mJudul"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="20"
                            android:text="Video Pembelajaran Bahasa Inggris"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/mDeskripsi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="20"
                            android:text="Video Continous tense"
                            android:textColor="@color/c_black"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/mAuthor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:text="Video Continous tense"
                            android:textColor="@color/color_default_blue"
                            android:textSize="9dp" />


                        <Button
                            android:layout_marginTop="3dp"
                            android:id="@+id/addMt"
                            android:layout_width="105dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="20dp"
                            android:background="@drawable/btnrounded_blue"
                            android:text="mulai"
                            android:textColor="@color/white"
                            android:textSize="10sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="right|center"
                            android:orientation="horizontal"
                            android:paddingRight="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right|center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/mTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="02 Jun, 2020 00:51"
                                    android:textColor="@color/color_default_black"
                                    android:textSize="12sp"
                                    android:textStyle="italic" />

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>